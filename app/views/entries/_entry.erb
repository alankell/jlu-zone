<%= show_model_form @entry, :html => {:class => "form-horizontal"} do |form|%>
  <% html_contents do |item| %>
    <% item << form.show_text_input(:name) %>
    <% item << form.show_category_field(:category) %>
    <% item << form.show_textarea_input(:content) %>
    <% item << content_tag(:button, itext("login"), :class => "btn btn-success", :type => :submit, "data-loading-text" => itext("loging")) %>
  <% end %>
<% end %>

