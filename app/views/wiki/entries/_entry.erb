<%= javascript_include_tag    "editor" %>
<%= form_for @entry, :html => {:class => "form-horizontal"} do |form|%>
  <div class="control-group">
    <%= form.text_field :name %>
  </div>
  <div class="control-group">
    <%= form.select :category_number , EntryCategory::CATEGORY_NAMES %>
  </div>
  <div class="control-group">
    <%= form.check_box :catalog %>
  </div>
  <div class="control-group">
    <div id="editor-button-bar"></div>
    <div class="text-content-area">
      <%= form.text_area :content, :id => 'editor-input', :rows => 10, :style => "height: 370px;"%>
    </div>
    <div id="editor-preview"></div>
  </div>
  <%= content_tag(:button, itext("submit"), :class => "btn btn-success", :type => :submit) %>
<% end %>