.box
  #tag_info
    %h1
      - if @tag
        = index_header(:tag => @tag.name) 
      - else
        = index_header 
      #logo.pull-right= itext("logo")
  .topics
    - @topics.each do |topic|
      - next if resource_lock?(topic)
      = render :partial => "community/topic_line", :locals => {:topic => topic}
    = link_to "More~", topics_path
= render :partial => "community/tag_nav"
  