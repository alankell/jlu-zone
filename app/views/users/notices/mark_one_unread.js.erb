$('#' + "notice_<%= @notice.id %>" + ' .pull-right .notice_one_unread').replaceWith("<%= escape_javascript(mark_one_read_button(@notice))%>");

var count = parseInt($('.notifications').find('.count').text());

if(count == 0){
  $('.notifications').addClass('unread');
}
$('.notifications').find('.count').text(count + 1);

$("<%= escape_javascript(unread_notice?(@notice))%>").prependTo('#' + "notice_<%= @notice.id %>" + ' .pull-right').fadeIn('fast');