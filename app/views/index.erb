<h1>这是主页</h1>

<h2>登录</h2>
<%if !user_signed_in?%>
  <%= form_for :user ,:url => {:controller => "devise/sessions",:action => "create"} do |f| %>
    <div><%= f.label :email %><br />
    <%= f.email_field :email %></div>
    <div><%= f.label :password %><br />
    <%= f.password_field :password %></div>
    <div><%= f.submit "Sign up" %></div>
  <% end %>
<%else%>
  <%= link_to "退出登录", destroy_user_session_path, :method => :delete%>
<%end%>
<h2>搜索</h2>
<h2>最新词条</h2>

<%= show_list @newest_entries, :entry do |list| %>
  <% list.link_string_column :name%>
  <% list.link_string_column :fonder_name, :fonder%>
  <% list.link_string_column :last_editor_name, :last_editor%>
  <% list.string_column      :history_versions_size%>
<% end %>

<h2>热门词条</h2>
<%= show_model_form @entry do |entry| %>
  <% entry.show_text_input :name%>  
<% end %>

